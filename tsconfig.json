{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist",
    "jsx": "react-jsx",
    // "baseUrl": ".",
    "paths": {
      "@Components/*": ["../map-app/components/assets/*"],
      "@styles/*": ["../map-app/styles/*"],
    }
  },
  "include": ["src", "server.ts", "pages", "api", "src/tests/__test__/App.test.tsx", "components", "interfaces", "redux", "hooks"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
